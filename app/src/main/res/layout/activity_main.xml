<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.fajarnuruladlim.aplikasikalkulator.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/silat"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputnilai1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/birulaut"
                android:hint="Input Angka"/>

            <EditText
                android:id="@+id/inputnilai2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/birulaut"
                android:hint="Input Angka"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/nilaikpk"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/birudongker"
                android:text="KPK"/>

            <Button
                android:id="@+id/nilaifpb"
                android:layout_width="150dp"
                android:textColor="@color/birudongker"
                android:layout_height="wrap_content"
                android:text="FPB"/>

        </LinearLayout>

        <EditText
            android:id="@+id/hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</LinearLayout>
